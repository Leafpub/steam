{{#pagination}}
    <nav class="pagination" role="pagination">
        {{#is total_pages '>' 0}}
            {{#if previous_page_url}}
                <a class="newer-posts" href="{{previous_page_url}}"><i class="fa fa-chevron-circle-left"></i> Newer</a>
            {{/if}}
            <span class="page-number">Page {{current_page}} of {{math total_pages}}</span>
            {{#if next_page_url}}
                <a class="older-posts" href="{{next_page_url}}">Older <i class="fa fa-chevron-circle-right"></i></a>
            {{/if}}
        {{else}}
            No results
        {{/is}}
    </nav>
{{/pagination}}